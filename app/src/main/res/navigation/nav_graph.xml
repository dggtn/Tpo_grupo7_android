<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.tpo_mobile.LoginFragment"
        android:label="form signUp"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/entrarHome"
           app:destination="@+id/fragmentcatalogo"/>
    </fragment>
    <fragment
        android:id="@+id/fragmentcatalogo"
        android:name="com.example.tpo_mobile.Catalogo"
        android:label="fragmentcatalogo"
        tools:layout="@layout/fragment_curso">
        <action
            android:id="@+id/curso"
            app:destination="@+id/fragment_detalle_curso"/>

    </fragment>
    <fragment
        android:id="@+id/fragment_detalle_curso"
        android:name="com.example.tpo_mobile.DetalleCurso"
        android:label="detalle curso"
        tools:layout="@layout/fragment_detalle_curso">

    </fragment>

</navigation>