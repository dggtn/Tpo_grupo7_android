<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/titulo_detalle_curso"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9D8888">

    <!-- Contenido scrolleable -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/detail_scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/reservaButton">

        <LinearLayout
            android:id="@+id/detail_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Título (mismo id) -->
            <TextView
                android:id="@+id/TituloNombreCurso"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:maxLines="3"
                android:ellipsize="end"
                app:autoSizeTextType="uniform"
                app:autoSizeMinTextSize="18sp"
                app:autoSizeMaxTextSize="28sp"
                app:autoSizeStepGranularity="1sp"
                tools:text="Funcional Inicial"
                android:layout_marginBottom="12dp"/>

            <!-- Minutos (mismo id) -->
            <TextView
                android:id="@+id/minutos_clase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="18sp"
                tools:text="45min"
                android:layout_marginBottom="8dp"/>

            <!-- Profesor (mismo id) -->
            <TextView
                android:id="@+id/profesor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="18sp"
                tools:text="Nombre Profesor"
                android:layout_marginBottom="24dp"/>

            <!-- Título descripción (mismo id) -->
            <TextView
                android:id="@+id/descripcion_curso"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="20sp"
                tools:text="Descripción de la clase:"
                android:layout_marginBottom="8dp"/>

            <!-- Texto descripción (mismo id) -->
            <TextView
                android:id="@+id/text_descripcion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                tools:text="Clase de pesas fuerza espalda"
                android:layout_marginBottom="16dp"/>

            <!-- Imagen (mismo id) -->
            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/pesas"
                android:layout_marginBottom="20dp"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Botón fijo abajo (mismo id) -->
    <Button
        android:id="@+id/reservaButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Reservar"
        android:textStyle="bold"
        android:textSize="16sp"
        android:backgroundTint="#2196F3"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
